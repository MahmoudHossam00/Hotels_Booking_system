@model IEnumerable<MVCBookingFinal_YARAB_.Models.CardPaymentMethod>

@{
    ViewData["Title"] = "GetAllCards";
}

<h1>GetAllCards</h1>

<p>
    <a asp-action="CreateCard">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CVV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CVV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType)
            </td>
            <td>
                <a asp-action="EditCardMethod" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="GetCardMethodById" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteCardMethod" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
