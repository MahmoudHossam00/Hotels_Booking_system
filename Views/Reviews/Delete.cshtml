@model MVCBookingFinal_YARAB_.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header text-white text-center" style="background-color:#1A374D">
            <h3>Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <h5 class="text-center ">Are you sure you want to delete this review?</h5>
            <hr />
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="table">
                        <tr>
                            <th>Field</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="fw-bold">Hotel</td>
                            <td>@ViewBag.Hotel</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">User</td>
                            <td>@ViewBag.UserName</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Rating</td>
                            <td>@Html.DisplayFor(model => model.Rating)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Description</td>
                            <td>@Html.DisplayFor(model => model.Description)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Review Date</td>
                            <td>@Html.DisplayFor(model => model.ReviewDate)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-4">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
